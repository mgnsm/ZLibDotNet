<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard1.3</TargetFramework>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <LangVersion>10.0</LangVersion>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <EnableNETAnalyzers>true</EnableNETAnalyzers>
    <AnalysisMode>All</AnalysisMode>
    <EnforceCodeStyleInBuild>true</EnforceCodeStyleInBuild>
  </PropertyGroup>

  <PropertyGroup>
    <Title>ZLibDotNet</Title>
    <Description>A fully managed C#/.NET Standard 1.3 implementation of the compression (deflate) and decompression (inflate) functions in the zlib compression library, including both unsafe (operations involving pointers) and type-safe APIs for doing in-memory compression, decompression and integrity checks of uncompressed data in the zlib format (documented in RFC 1950).</Description>
    <Authors>Magnus Montin</Authors>
    <Copyright>© Magnus Montin</Copyright>
    <PackageLicenseExpression>Zlib</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/mgnsm/ZLibDotNet</PackageProjectUrl>
    <PackageTags>compression uncompression deflate inflate zlib</PackageTags>
    <PackageReleaseNotes>https://github.com/mgnsm/ZLibDotNet/releases</PackageReleaseNotes>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>
	
  <ItemGroup>
    <PackageReference Include="System.Memory" Version="4.5.4" />
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.1.1" PrivateAssets="All" />
  </ItemGroup>

</Project>
